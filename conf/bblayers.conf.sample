# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "6"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  /home/build/shared/poky/meta \
  /home/build/shared/poky/meta-yocto \
  /home/build/shared/poky/meta-yocto-bsp \
  /home/build/shared/poky/meta-bsp_lemaker \
  "
BBLAYERS_NON_REMOVABLE ?= " \
  /home/build/shared/poky/meta \
  /home/build/shared/poky/meta-yocto \
  "
